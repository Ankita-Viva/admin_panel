
        <div class="widget">
            <h3>Blog Categories</h3>
            <div>
                <div class="row-fluid">
                  <% @total_cat = @blog_categories.count/2.0 %>
                  <% @span1 = @total_cat.ceil %>
                  <% @span2 = @total_cat.floor %>
                  <% @span1_cat = @blog_categories.first(@span1) %>
                  <% @span2_cat = @blog_categories.last(@span2) %>

                    <div class="span6">
                        <ul class="unstyled">
                          <% @span1_cat.each do |category| %>
                            <li><%= link_to category.title, particular_category_blogs_path(category) %></li>                     
                          <% end %>
                        </ul>
                    </div>

                    <div class="span6">
                        <ul class="unstyled">
                          <% @span2_cat.each do |category| %>
                            <li><%= link_to category.title, particular_category_blogs_path(category) %></li>                     
                          <% end %>
                        </ul>
                    </div>
                  
                </div>

            </div>                       
        </div>